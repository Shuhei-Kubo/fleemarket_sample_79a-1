.header
  = render partial: 'layouts/header'

%nav.bread_crumbs
  %ol
    %li 
      - breadcrumb :mypage
      = breadcrumbs separator: " &rsaquo; "

.main
  .main__left
    %nav.mypage-nav
      %p マイページ
      %ul.mypage-lists
        %li
          .lists-info
            = link_to new_product_path do
              出品する
          = icon('fas','angle-right')
        %li
          .lists-info
            = link_to "#" do
              出品した商品
          = icon('fas','angle-right')
        %li
          .lists-info
            = link_to "#" do
              購入した商品
          = icon('fas','angle-right')
        %li
          .lists-info
            = link_to "#" do
              お問い合わせ
          = icon('fas','angle-right')
        %li
          .lists-info
            =link_to "#" do
              お知らせ
          = icon('fas','angle-right')

      %p 設定
      %ul.setting-lists
        - if !current_user.card
          %li.list-setting
            .list-setting__info
              =link_to new_card_path do
                クレジットカード登録
            = icon('fas','angle-right')
        - if current_user.card
          %li.list-setting
            .list-setting__info
              =link_to card_path(@user.card.id) do
                クレジットカード登録削除
            = icon('fas','angle-right')
        %li.list-setting
          .list-setting__info
            =link_to "#" do
              ログアウト
          = icon('fas','angle-right')

  .main__right
    %section.user-info
      .user-info__contents
        = link_to "#" do
          %figure
            %img{:alt => "", :width => "60", :height => "60", :src => "//static.mercdn.net/thumb/members/394621039.jpg?1579745078" }/
            = current_user.nickname
            
    %section.user-todo
      .tab-todo
        やることリスト
      .tab-content
        %ul.todo-lists
          %li
            .list-item
              〇〇日までに、発送
            = icon('fas','angle-right')
          %li
            .list-item
              〇〇日までに、発送
            = icon('fas','angle-right')
    %section.buy-product
      %h2.buy-product__head 
        購入したもの
      .tab-buy
        取引中
      .tab-content
        %ul.buy-lists
          %li
            .list-item
              メンズ、Tシャツ（M）
            = icon('fas','angle-right')
