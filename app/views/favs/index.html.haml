.main-header
  =render partial: 'layouts/header'
.fav-list
  お気に入り一覧
  .ProductLists
    - @favs.each do |fav|
      .ProductList
        .ProductList__img
          - fav.images.first(1).each do |image|
            = image_tag asset_path("#{image.image}"), class: 'image-category'
              -if fav.buyer_id.present?
              .products-sold
                .products-sold__inner
                  SOLD
        .ProductList__Body
          %h3.name
            = link_to fav.name, "/products/#{fav.id}"
          %ul.PriceLike
            %li.price
            = "#{fav.price}円"
            %li.star 0
          %p.tax (税込)